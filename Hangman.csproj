    <None Remove="Assets\Images\3.png" />
    <None Remove="Assets\Images\4.png" />
    <None Remove="Assets\Images\5.png" />
    <None Remove="Assets\Images\6.png" />
    <None Remove="Assets\Images\7.png" />
